<div class="row">
  <div class="col-md-6">
    <h2>Login</h2>

    <form class="form loginForm">
      <div class="form-group">
        <label for="emailLogin">Email:</label>
        <input class="form-input" type="text" id="emailLogin" />
      </div>
      <div class="form-group">
        <label for="passwordLogin">Password:</label>
        <input class="form-input" type="password" id="passwordLogin" />
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit">Login</button>
      </div>
    </form>
  </div>
  <div class="col-md-6">
    <h2>Signup</h2>

    <form class="form signupForm">
      <div class="form-group">
        <label for="usernameSignup">Name:</label>
        <input class="form-input" type="text" id="usernameSignup" />
      </div>
      <div class="form-group">
        <label for="email-signup">Email:</label>
        <input class="form-input" type="text" id="emailSignup" />
      </div>
      <div class="form-group">
        <label for="passwordSignup">Password:</label>
        <input class="form-input" type="password" id="passwordSignup" />
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit">Signup</button>
      </div>
    </form>
  </div>
</div>
<script src="./js/login.js"></script>
<script src="./js/signup.js"></script>