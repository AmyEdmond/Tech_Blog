<!-- Loop over each object in the posts array -->
{{#each posts as |post| }}
<div class="row mb-4 post">
  <div class="col-md-5">
    <h2>
      <!-- Call helper function-->
     
      <a href="/post/{{post.id}}">{{post.postTitle}}</a>
    </h2>
    <p>Created by {{post.user.username}} on {{format_date post.date_created}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{post.description}}
    </p>
    <form class="form newCommentForm">
      <div class="form-group">
        <label for="comment">comment:</label>
        <input class="form-input" type="text" id="comment" title="comment" />
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Submit</button>
        
      </div>
    </form>
    <p>
      {{comment}}
    </p>
  </div>
</div>
{{/each}}
